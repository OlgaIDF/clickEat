{% extends 'base.html.twig' %}

{% block title %}accueil{% endblock %}

{% block body %}

<section id="accueil">
<div class="container-fluid">
<div class="row">
<div class="col-10 offset-1 text-center">
<h1 class="pt-4">Choisissez votre restaurant</h1>
<hr class="pb-3">
</div>
</div>
<div class="row justify-content-center ">
{% for restaurant in restaurants %}
<div class="col-md-5 col-sm-10 ml-4">
<div class="cardh mb-3">
  <div class="row no-gutters">
    <div class="col-md-4 mt-4">
     <img src="{{ asset('img/resto/' ~ restaurant.imgResto) }}" class="card-img-top" alt="...">

    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ restaurant.nom }}</h5>
        <p class="card-text">{{ restaurant.description }}</p>
        <a href="#{{ restaurant.nom }}" class="btn-sm float-right">Voir les menus</a>
      </div>
    </div>
  </div>
</div>
</div>


{% endfor %}
</div>
</section>
<section id="Maison latine">

<div class="container-fluid">
<div class="row">
<div class="col-10 offset-1 text-center">
<h2 class="mt-4 text-center">Maison latine</h2>

</div>
</div>
<div class="row justify-content-center mx-5">
{% for menu in menus %}
{% if menu.restaurant.nom  == 'Maison latine' %}
<div class="col-xl-3 col-lg-4 col-sm-6 git p-2">
<div class="card">
  <img src="{{ asset('img/menus/' ~ menu.imgMenu) }}" class="card-img-top" alt="...">
  <div class="card-body text-center">
    <h5 class="card-title ">{{ menu.nom }}</h5>
    <p class="card-text text-left">{{ menu.composants }}</p>
    <p>{{ menu.prix }} &euro;</p>
    <a href="{{ path('cart_add', {'id': menu.id}) }}" class="btn-sm ">Ajouter au panier</a>
    
